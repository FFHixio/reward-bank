    <!-- Page Wrapper -->
    <div id="wrapper" class="rb-dashboard-container">
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content" class="rb-dashboard-container-2">
              {{> nav-bar this}}
                <!-- PAGE CONTENT -->
                <div class="container-fluid main-content">

                    <!-- Page Heading -->
                    <div class="row">
                      <div class="col">
                    <h1 class="h3 mb-4">Settings</h1>
                    </div>
                    </div>

                    <div class="row">
                      <div class="col">
                      <!-- Dropdown Card Example -->
                      <div class="card shadow mb-4 rb-left-side-card">
                      <!-- Card Header -->
                      <div
                          class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                          <h6 class="m-0 font-weight-bold">Your Task List</h6>
                      </div>
                      <!-- Card Body -->
                      <div class="card-body">
                        <div class="table-responsive">
                          <table class="table">  
                            <tbody id="task-table">
                                {{#each data.tasks as |task|}}
                                {{> settings-task task}}
                                {{/each}}
                            </tbody>
                          </table>
                        </div>
                        <div>
                          <form class="add-new-task-section rb-add-new-task-section">
                            <div class="row justify-content-center">
                              <div class="col-lg-6 col-md-12 mb-2">
                                    <label for="new-task-name">Name:</label>
                                    <input type="text" id="new-task-name" />
                              </div>
                              <div class="col-lg-6 col-md-12 mb-3">
                                    <label for="new-task-value">Value:</label>
                                    <input type="number" id="new-task-value" />
                              </div>
                            </div>
                            <div class="row justify-content-center">
                              <button type="submit" id="add-task-btn" class="btn add-task-btn mr-5">Add</button>
                              <button type="button" id="discard-task-btn" class="btn add-new-task-section delete-task-section">Discard</button>
                            </div>
                          </form>
                            
                          <button type="button" id="create-task-btn" class="btn create-new-task-section">Create New Task</button>
                        </div> 
                      </div> 
                    </div>
                    </div>
                    <div class="col">
                     <!-- Dropdown Card Example -->
                    <div class="card shadow mb-4 rb-right-side-card">
                      <!-- Card Header -->
                      <div
                          class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                          <h6 class="m-0 font-weight-bold">Your Reward List</h6>
                      </div>
                      <!-- Card Body -->
                      <div class="card-body">
                        <div class="table-responsive">
                          <table class="table">  
                            <tbody id="reward-table">
                                {{#each data.rewards as |reward|}}
                                {{> settings-reward reward}}
                                {{/each}}
                            </tbody>
                          </table>
                        </div>
                        <div>
                          <form class="add-new-reward-section">
                            <div class="row justify-content-center">
                              <div class="col-lg-6 col-md-12 mb-2">
                                <label for="new-reward-name">Name:</label>
                                <input type="text" id="new-reward-name" />
                              </div>
                              <div class="col-lg-6 col-md-12 mb-3">
                                <label for="new-reward-cost">Cost:</label>
                                <input type="number" id="new-reward-cost" />
                              </div>
                              <div class="row justify-content-center">
                                <button type="submit" id="add-reward-btn" class="btn add-reward-btn mr-5">Add</button>
                                <button type="button" id="discard-reward-btn" class="btn add-new-reward-section delete-reward-section">Discard</button>
                              </div>
                            </div>
                          </form>
                            
                            <button type="button" id="create-reward-btn" class="btn create-new-reward-section">Create New Reward</button>
                        </div> 
                      </div> 
                    </div>
                </div>
            </div>
            </div>
            </div>
            <!-- END OF MAIN CONTENT -->

            <!-- Footer -->
            <footer class="sticky-footer rb-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Reward Bank 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
    <script src="/javascript/task-add.js"></script>
    <script src="/javascript/task-delete.js"></script>
    <script src="/javascript/reward-add.js"></script>
    <script src="/javascript/reward-delete.js"></script>