<div class="signup-page" >
  <div class="container" >
    <div class="row">
      <div class="col-sm-10 col-lg-6 offset-sm-1 offset-lg-3 signup-card" >
        <img src="images/reward-bank-logo.png" style="height:150px; align: center" alt="logo" class="logo">
        <div class="form-bg ">
          <h2>Ready to get started? Enter your login details below.</h2>

          <form class="login-form">
            <div class="form-group">
            <label for="username-login">Username:</label> 
              <input type="text" id="username-login" class="form-control" />
            </div>
            <div class="form-group" >
              <label for="password-login">Password:</label>
              <input type="password" id="password-login" class="form-control"/>
            </div>
            <div class="form-group"> 
              <button type="submit" class="signup-btn">Login</button>
            </div>
          </form>
          <h2>Need to sign up instead? Enter your information below.</h2>
          <form class="signup-form">
            <div class="form-group">
              <label for="username-signup">Name:</label>
              <input type="text" id="name-signup" class="form-control" />
            </div>
            <div class="form-group">
              <label for="username-signup">Username:</label>
              <input type="text" id="username-signup" class="form-control" />
            </div>
            <div class="form-group">
              <label for="password-signup">Password:</label>
              <input type="password" id="password-signup" class="form-control"/>
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">I am a:</label>
              <select class="form-control" id="signup-role">
               <option value="parent">Parent</option>
               <option value="parent">Guardian</option>
               <option value="teacher">Educator</option>
              </select>
            </div>
            <div class="form-group">
              <button type="submit" class="signup-btn">Signup</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="/javascript/login.js"></script>
<script src="/javascript/signup.js"></script>
