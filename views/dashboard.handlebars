    <!-- Page Wrapper -->
    <div id="wrapper" class="rb-dashboard-container">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column ">

            <!-- Main Content -->
            <div id="content" class="rb-dashboard-container-2">

              {{> nav-bar this}}
                <!-- PAGE CONTENT -->
                <div class="container-fluid main-content">
                    <br>
                    <!-- Page Heading -->     
                    <div class="row" style="margin: 10px">       
                      <div class="col">
                        <h1 class="h3 mb-4 main-content">Welcome {{data.user.name}}! Lets get started.</h1>
                        {{#if data.isAdmin}}
                        <p>Ready to see what your children have been up to? See if you have any tasks or rewards to approve. Head over to settings if you want to adjust the tasks and rewards available.</p>
                        {{else}}
                        <p>Ready to see what tasks you have on your to-do list today? See if you have enough points to claim a reward.</p>
                        {{/if}}
                      </div>
                    <!-- Current Child Points Card -->
                      <div class="col">
                        <div class="card border-left-primary shadow h-100 py-2 rb-point-balance">
                          <div class="card-body ">
                              <div class="row no-gutters align-items-center">
                                  <div class="col mr-2">
                                      <div class="rb-point-balance-head">
                                        {{#if data.isAdmin}}
                                        Your Children's Current Points Balance
                                        {{else}}
                                        Your Current Points Balance
                                        {{/if}}
                                        
                                        </div>
                                      <div class="table-responsive-sm">
                                        <table class="table">
                                           <tbody>
                                                {{#if data.isAdmin}}
                                                  {{#each data.children as |child|}}
                                                    {{> dashboard-children-balance child}}
                                                  {{/each}}
                                                {{else}}
                                                  <td class="rb-child-point-balance" id="user_balance">{{data.user.balance}} points</td>
                                                {{/if}}

                                        </table>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                      </div>
                  </div>
                  {{#if data.isAdmin}}
                    {{> dashboard-parent data}}
                  {{else}}
                    {{> dashboard-child data}}
                  {{/if}}

                    
                </div>
            </div>
            <!-- END OF MAIN CONTENT -->

            <!-- Footer -->
            <footer class="sticky-footer rb-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Reward Bank 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

{{#if loggedIn}}
<script src="/javascript/logout.js"></script>
{{/if}}

{{#if data.isAdmin}}
  {{#if data.task_history.length}}
  <script src="/javascript/task-approval.js"></script>
  {{/if}}
{{else}}
  <script src="/javascript/task-complete.js"></script>
  <script src="/javascript/reward-request.js"></script>
{{/if}}

